{
  "name": "@squarespace/less-ts-cli",
  "author": "Patrick Hensley <pathensley@gmail.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/squarespace/less-ts"
  },
  "bin": {
    "slessc": "./bin/lessc.js"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "build:watch": "tsc -p ./tsconfig.build.json -w --preserveWatchOutput",
    "clean": "rimraf ./coverage ./lib && jest --clearCache",
    "clean:full": "rimraf ./node_modules",
    "generate": "ts-node scripts/generate.ts",
    "lint": "tslint -p ./tsconfig.json",
    "reformat": "prettier --write bin src",
    "release": "",
    "stress": "echo 'fixme'",
    "test": "rimraf ./coverage && jest --coverage --verbose -i --no-cache --coverageReporters=html",
    "test:codecov": "rimraf ./coverage && jest --coverage --coverageReporters=lcovonly --verbose -i --no-cache",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@squarespace/less-ts": "^1.1.3",
    "@types/yargs": "^17.0.24",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@types/lodash": "4.14.194",
    "@types/node": "18.16.3",
    "glob": "^10.2.2",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.4",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tslint": "5.20.1",
    "tslint-no-circular-imports": "^0.7.0",
    "typescript": "5.0.x"
  },
  "files": [
    "bin",
    "lib"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {},
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "version": "1.1.3"
}
