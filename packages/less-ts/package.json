{
  "name": "@squarespace/less-ts",
  "author": "Patrick Hensley <pathensley@gmail.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/squarespace/less-ts"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "build:watch": "tsc -p ./tsconfig.build.json -w --preserveWatchOutput",
    "clean": "rimraf ./coverage ./lib && jest --clearCache",
    "clean:full": "rimraf ./node_modules",
    "generate": "ts-node scripts/generate.ts",
    "lint": "tslint -p ./tsconfig.json",
    "reformat": "prettier --write __tests__ scripts src",
    "release": "",
    "stress": "echo 'fixme'",
    "test": "rimraf ./coverage && jest --coverage --verbose -i --no-cache --coverageReporters=html",
    "test:codecov": "rimraf ./coverage && jest --coverage --coverageReporters=lcovonly --verbose -i --no-cache",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.4",
    "@types/lodash": "4.14.198",
    "@types/node": "20.5.9",
    "glob": "^10.3.4",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "tslint": "5.20.1",
    "tslint-no-circular-imports": "^0.7.0",
    "typescript": "5.2.x"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {},
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "version": "1.1.3"
}
